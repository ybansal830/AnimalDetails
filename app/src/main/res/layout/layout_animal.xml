<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvAnimal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ivAnimal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/giraffe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivAnimal"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvNameAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giraffe"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivAnimal"
        app:layout_constraintStart_toEndOf="@+id/tvName"/>
    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvTypeAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mammal"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNameAnimal"
        app:layout_constraintStart_toEndOf="@+id/tvType"/>
    <TextView
        android:id="@+id/tvSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvType"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvSoundAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hum"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeAnimal"
        app:layout_constraintStart_toEndOf="@+id/tvSound"/>



</androidx.constraintlayout.widget.ConstraintLayout>